{
    "name": "lumi",
    "displayName": "Lumi Language",
    "description": "Syntax highlighting for Lumi language files.",
    "version": "0.2.1",
    "publisher": "meircif",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.59.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/meircif/vscode-lumi-lang"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "lumi",
        "lumi-lang"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lumi",
                "aliases": [
                    "Lumi",
                    "lumi",
                    "lumi-lang"
                ],
                "extensions": [
                    ".lm",
                    ".lumi"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lumi",
                "scopeName": "source.lumi",
                "path": "./syntaxes/lumi.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "[lumi]": {
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
            }
        }
    }
}
